{
  "swift.buildArguments": [],
  "swift.testEnvironmentVariables": {},
  "swift.autoGenerateLaunchConfigurations": true,
  "swift.backgroundCompilation": true,
  "swift.diagnosticsCollection": "onBuild",

  // Editor settings for Swift
  "[swift]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": false,
    "editor.rulers": [120],
    "editor.wordWrap": "off"
  },

  // Metal shader files
  "[metal]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // File associations
  "files.associations": {
    "*.metal": "metal"
  },

  // Exclude build artifacts from search
  "files.exclude": {
    "**/.build": true,
    "**/.swiftpm": true,
    "**/DerivedData": true,
    "**/*.xcodeproj": true,
    "**/*.xcworkspace": true
  },

  "search.exclude": {
    "**/.build": true,
    "**/.swiftpm": true,
    "**/Package.resolved": true,
    "**/*.mlmodelc": true
  },

  // Recommended extensions (shown when opening workspace)
  "recommendations": [
    "sswg.swift-lang",
    "nickmillerdev.metal-shader"
  ]
}
